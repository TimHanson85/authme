extends layout

block content
  h1= title
  img.image(src='http://i.imgur.com/m4YcC.jpg')
  if error
    h3= error
  if username
    p You are currently logged in as #{ username }
      form(method="post" action="logout")
        input(type="submit" value="logout")
    div
    form(method="post" action="/addpost")
      h2 Give me your posts
      div
        label Say things:
          input(type="text" name="postText" placeholder="postStuff")
          input(type="submit" value="endter")
    div.tweets
      each post in posts
        p.user= post.username
          span.body= post.body
          span.date= post.posted_at
